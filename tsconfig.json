{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015.promise",
      "es6"
    ],
    "module": "commonjs",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
