{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "command": "npm i",
      "type": "shell"
    },
    {
      "label": "clean",
      "command": "npm run clean",
      "type": "shell"
    },
    {
      "label": "lint",
      "command": "npm run lint",
      "type": "shell"
    },
    {
      "label": "transpile",
      "command": "npm run transpile",
      "type": "shell",
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "label": "build",
      "command": "npm run build",
      "type": "shell",
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "command": "npm run test:unit",
      "type": "shell",
      "problemMatcher": "$tsc",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "coverage:open",
      "command": "npm run coverage:open",
      "type": "shell",
      "group": "test"
    },
    {
      "label": "pack",
      "command": "npm pack",
      "type": "shell"
    }
  ]
}
